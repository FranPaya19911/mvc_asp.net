@model MilistaSeries.Models.USUARIOS
@{
    ViewBag.Title = "Index";
}
<style>
    img{
        width:200px;
        height:250px;
    }
</style>
<div class="container" style="padding-top: 60px;">
    <h1 class="page-header">Perfil</h1>
    <div class="row">
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="text-center">
                <img src="~/Content/Images/usuario/@Html.DisplayFor(model=> model.Imagen)" class="avatar img-circle img-thumbnail" alt="Foto del perfil">
                <br />
                <br />
                <label>Fecha Creacion: </label>
                @Html.DisplayFor(model => model.FechaCreacion)
            </div>
        </div>
        
        <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre,  htmlAttributes: new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-8 control-label" style="text-align:left;">
                        @Html.DisplayFor(model => model.Nombre)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Correo, htmlAttributes: new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-8 control-label" style="text-align:left;">
                        @Html.DisplayFor(model => model.Correo)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Ubicacion, htmlAttributes: new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-8 control-label" style="text-align:left;">
                        @Html.DisplayFor(model => model.Ubicacion)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Genero, htmlAttributes: new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-8 control-label" style="text-align:left;">
                        @Html.DisplayFor(model => model.Genero)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.FechaNacimiento, "Fecha Nacimiento", htmlAttributes: new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-8 control-label" style="text-align:left;">
                        @Html.DisplayFor(model => model.FechaNacimiento)

                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        @Html.ActionLink("Editar", "Edit", "MisDatos")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
